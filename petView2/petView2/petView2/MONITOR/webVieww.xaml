<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="petView2.MONITOR.webVieww">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#DCDCDC" Spacing="50">

            <WebView WidthRequest="360"
                     HeightRequest="400" 
                     Source="http://192.168.0.19:81/index.htm"/>

            <Button TextColor="White" BackgroundColor="#363636" FontSize="Medium"
                    HeightRequest="50" VerticalOptions="Center" Text="VOLTAR" WidthRequest="100"
                    Clicked="Voltar_Clicked" x:Name="Voltar"  BorderRadius="20" />

            <Button TextColor="White" BackgroundColor="#363636" FontSize="Medium"
                    HeightRequest="50" VerticalOptions="Center" Text="Alimentar" WidthRequest="100"
                    Clicked="Alimento_Clicked" x:Name="Alimento" BorderRadius="20" />


            <Label Text="Design by CRE10"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>